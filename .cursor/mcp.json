{
    "mcpServers": {
        "flask-tools-simple": {
            "command": "cmd.exe",
            "args": [
                "/c",
                "wsl",
                "-e",
                "bash",
                "-c",
                "cd \"$(wslpath -u '$(pwd)')/.cursor/MCP\" && .venv/bin/python mcp_server_simple.py"
            ],
            "enabled": true
        }
    }
}